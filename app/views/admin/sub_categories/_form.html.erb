<%= form_for [:admin, @sub_category] do |f| %>
  <% if @sub_category.errors.any? %>
    <div id="error_explanation">
      <p><strong><%= @sub_category.errors.count %> Fehler beim Speichern:</strong><br />&nbsp;</p>

      <ul class="spaced">
      <% @sub_category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table cellspacing="15">
    <tbody>
      <tr>
        <td><%= f.label :title, 'Kategorie' %></td>
        <td><%= f.text_field :title %></td>
      </tr>
      <tr>
        <td><%= f.label :sub_category_id, 'Bereich' %></td>
        <td><%= if @categories.blank?
              ('Keine Bereiche vorhanden. ' + link_to('Bereich erstellen', new_admin_category_path)).html_safe
            else
              select :sub_category, :category_id, @categories.map {|c| [c.title, c.id]}
            end %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit value: 'Kategorie speichern' %></td>
      </tr>
    </tbody>
  </table>
<% end %>